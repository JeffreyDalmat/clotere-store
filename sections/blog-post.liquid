{{ section.settings['posts-range'] }}

{%- assign blog = section.settings['new-blog'] %}

{% unless blog.articles_count == 0 %}
  <!-- Display articles based on range -->
  {% for article in blog.articles limit: section.settings['posts-range'] %}
    <div class="grid__item article">
        <a href="{{ article.url }}">
          <img src="{{ article.image | image_url: width: '400x' }}" alt="" loading="lazy">
        </a>
        <a href="{{ article.url }}">
          <h3>{{ article.title }}</h3>
        </a>
    </div>
  {% endfor %}
{% endunless %}

{% schema %}
{
  "name": "New Blog Posts",
  "settings": [
    {
      "id": "posts-range",
      "type": "range",
      "label": "Range",
      "min": 3,
      "max": 12,
      "step": 3,
      "default": 3
    },
    {
      "id": "new-blog",
      "type": "blog",
      "label": "New Blog"
    }
  ],
  "presets": [
    {
      "name": "New Blog Posts",
      "category": "Posts"
    }
  ]
}
{% endschema %}
